generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement()) @map("user_id")
  name     String
  email    String  @unique
  phone    String?
  password String

  shoppingCart ShoppingCart? 
  helpRequests HelpRequest[] 
  responses    Response[]   

  @@map("users") 
}

model ShoppingCart {
  id     Int @id @default(autoincrement()) @map("cart_id")
  userId Int @unique @map("user_id") 

  user  User               @relation(fields: [userId], references: [id])
  items ShoppingCartItem[]

  @@map("shopping_carts")
}
model ShoppingCartItem {
  cartId        Int      @map("cart_id")
  helpRequestId Int      @map("help_request_id")
  addedAt       DateTime @default(now()) @map("added_at")

  cart        ShoppingCart @relation(fields: [cartId], references: [id])
  helpRequest HelpRequest  @relation(fields: [helpRequestId], references: [id])

  @@id([cartId, helpRequestId])
  @@map("shopping_cart_items")
}

model Category {
  id   Int    @id @default(autoincrement()) @map("category_id")
  name String @map("categories_name")

  helpRequests HelpRequest[]

  @@map("categories")
}

model HelpRequest {
  id                  Int     @id @default(autoincrement()) @map("help_request_id")
  nameOfProduct       String  @map("name_of_product")
  description         String  @db.Text
  exchangeProductName String? @map("exchange_product_name")
  location            String? @map("help_request_location")
  imageUrl            String? @map("help_request_image_url")
  isCheckout          Boolean @default(false) @map("is_checkout")

  userId     Int @map("users_id")
  categoryId Int @map("categories_id")

  user                User                  @relation(fields: [userId], references: [id])
  category            Category              @relation(fields: [categoryId], references: [id])
  cartItems           ShoppingCartItem[]
  responses           Response[]
  exchangeInformation ExchangeInformation[]

  @@map("help_requests")
}

model Response {
  id            Int @id @default(autoincrement()) @map("response_id")
  userId        Int @map("users_id")
  helpRequestId Int @map("help_requests_id")

  user        User        @relation(fields: [userId], references: [id])
  helpRequest HelpRequest @relation(fields: [helpRequestId], references: [id])

  @@map("responses")
}

model ExchangeInformation {
  id            Int     @id @default(autoincrement()) @map("exchange_information_id")
  name          String? @map("exchange_information_name")
  phone         String? @map("exchange_information_phone")
  email         String? @map("exchange_information_email")
  description   String? @db.Text @map("exchange_information_description")
  helpRequestId Int     @map("help_requests_id")

  helpRequest HelpRequest @relation(fields: [helpRequestId], references: [id])

  @@map("exchange_informations")
}